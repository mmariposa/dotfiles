}

#pulseaudio-button {
margin-bottom: 3px;
margin-left: 0px;
padding-left: 8px;
padding-right: 7px;
}

#clock-button {
    border: none;
    box-shadow: none;
    background-color: transparent;
margin-bottom: 3px;
